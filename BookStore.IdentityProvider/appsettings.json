{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    }
  },
  "ConnectionStrings": {
    "BookStoreIdentityProviderContextConnection": "Data Source=.;Initial Catalog=BookStoreIdentityProvider;Integrated Security=True"
  },

  "IdentityServer": {
    "IssuerUri": "https://localhost:5000",
    "IdentityResources": [
      {
        "Name": "openid",
        "DisplayName": "Your user identifier",
        "UserClaims": [
          "sub"
        ]
      },
      {
        "Name": "profile",
        "DisplayName": "User profile",
        "Description": "Your user profile information (first name, last name, given name.... )",
        "UserClaims": [
          "name",
          "family_name",
          "given_name",
          "middle_name",
          "preferred_username",
          "profile",
          "picture",
          "website",
          "gender",
          "birthdate",
          "zoneinfo",
          "locale",
          "updated_at"
        ]
      },
      {
        "Name": "bookstore",
        "DisplayName": "Book Store Application",
        "Description": "This is sample application",
        "UserClaims": [
          "FullName",
          "CompanyStarted",
          "Address",
          "Permission",
          "role"
        ]
      }
    ],
    "ApiScopes": [
      {
        "Name": "openid"
      },
      {
        "Name": "profile"
      },
      {
        "Name": "bookstore"
      },
      {
        "Name": "bookstore_apis"
      },
      {
        "Name": "bookstore_viewbook"
      }
    ],
    "Clients": [
      {
        "Enabled": true,
        "ClientId": "bookstore_webapp",
        "ClientName": "BookStoreSample",
        "ClientSecrets": [ { "Value": "K7gNU3sdo+OL0wNhqoVWhr3g6s1xYv72ol/pe/Unols=" } ],
        "AllowedGrantTypes": [ "authorization_code" ],
        "AllowedScopes": [ "openid", "profile", "bookstore", "bookstore_apis", "bookstore_viewbook" ],
        "RedirectUris": [ "https://localhost:6001/signin-oidc" ],
        "PostLogoutRedirectUris": [ "https://localhost:6001/signout-callback-oidc" ],
        "RequireConsent": false,
        "RequirePkce": true,
        "AllowOfflineAccess": true
      }
    ],
    "ApiResources": [
      {
        "Name": "bookstore_apis",
        "DisplayName": "BookStore API",
        "Scopes": [
          {
            "Name": "bookstore_apis",
            "DisplayName": "BookStore API general access"
          },
          {
            "Name": "bookstore_viewbook",
            "DisplayName": "View Book API access"
          }
        ],
        "UserClaims": [ "Permission" ],
        "ApiSecrets": [ { "Value": "K7gNU3sdo+OL0wNhqoVWhr3g6s1xYv72ol/pe/Unols=" } ]
      }
    ]

  }
  }